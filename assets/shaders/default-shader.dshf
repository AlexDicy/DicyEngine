#version 330 core

layout(location = 0) out vec4 color;

in vec4 v_color;
in vec2 v_texture_coords;

struct Material {
    vec3 ambient_color;
};

struct AmbientLight {
    vec3 color;
    float intensity;
};

uniform Material u_material;
uniform AmbientLight u_ambient_light;
uniform sampler2D u_texture;

void main() {
    color = texture(u_texture, v_texture_coords) * v_color * vec4(u_material.ambient_color * u_ambient_light.color * u_ambient_light.intensity, 1.0);
}
